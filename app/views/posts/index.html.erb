<% @post.each do |post| %>

  <h2><%= link_to post.title, post %></h2>
  <%= link_to post do %>
  	<%= image_tag post.image.url(:medium) %>
  <% end %>
  <p>Published at <%= post.created_at.strftime('%b %d, %Y') %></p>
  <p> <%= truncate(post.content, length:100) %> </p>

<% end %>

<%= link_to "New Post", new_post_path, class: "btn btn-default" %>